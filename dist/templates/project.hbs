<div>
    <p id="techTitle">Select the technologies you are looking for in my projects</p>
    <div class="techType">
        <div><button>Programming Languages</button></div>
        <div><button>Web Development</button></div>
        <div style="display: none;"><button>Engineering</button></div>
    </div>
    <div class="techList">
        <div class="programmingLanguages" style="display:none;">
            {{#each tech_list}}
                {{#TechType 'programmingLanguages' this}}
                    <div class="eachTech">
                        <img src={{this.img_small}} alt={{this.tech_name}} class="techImg"/>
                    </div>
                {{/TechType}}
            {{/each}}
        </div>
        <div class="webDevelopment">
            {{#each tech_list}}
                {{#TechType 'webDevelopment' this}}
                    <div class="eachTech">
                        <img src={{this.img_small}} alt={{this.tech_name}} class="techImg"/>
                    </div>
                {{/TechType}}
            {{/each}}
        </div>
    </div>
    <div>
        {{#each project_list}}
        <div>
            <h1>{{this.project_name}}</h1>
            <a href={{this.github_link}}>Hosted Site</a>
        </div>
        {{/each}}
    </div>
</div>